{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-api",
            "type": "shell",
            "command": "dotnet",
            "args": ["build"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/ItemsApi"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run-api",
            "type": "shell",
            "command": "dotnet",
            "args": ["run"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/ItemsApi"
            },
            "problemMatcher": "$msCompile",
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "flutter-clean",
            "type": "shell",
            "command": "flutter",
            "args": ["clean"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/flutter_items_app"
            }
        },
        {
            "label": "flutter-pub-get",
            "type": "shell",
            "command": "flutter",
            "args": ["pub", "get"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/flutter_items_app"
            }
        },
        {
            "label": "flutter-build-macos",
            "type": "shell",
            "command": "flutter",
            "args": ["build", "macos"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/flutter_items_app"
            }
        },
        {
            "label": "flutter-run-macos",
            "type": "shell",
            "command": "flutter",
            "args": ["run", "-d", "macos"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/flutter_items_app"
            },
            "isBackground": true
        }
    ]
}
